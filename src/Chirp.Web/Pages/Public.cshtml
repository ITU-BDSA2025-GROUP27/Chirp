@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (User.Identity!.IsAuthenticated)
    {
        <partial name="_CheepCreationPartial" for="Input" />
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @CheepTextHelper.RenderWithHashtags(cheep.Text)
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                    @if (User.Identity!.IsAuthenticated && User.Identity.Name != cheep.Author)
                    {
                        @if (Model.Following.Contains(cheep.Author))
                        {
                            <form method="post">
                                <button type="submit" asp-page-handler="Unfollow" asp-route-authorName="@cheep.Author">
                                    unfollow
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post">
                                <button type="submit" asp-page-handler="Follow" asp-route-authorName="@cheep.Author">
                                    follow
                                </button>
                            </form>
                        }
                    }
                </li>
            }
        </ul>

        <partial name="_PaginationPartial" for="Pagination" />
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
